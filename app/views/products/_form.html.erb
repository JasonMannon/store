<%= form_for @product, :html => { :multipart => true } do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>
  <%= f.label :description %>
  <%= f.text_area :description %><br>
  <%= f.label :price %>
  <%= f.text_field :price %><br>
  <%= f.label :photo %>
  <%= f.file_field :photo %>
  <%= f.submit(:class => 'btn btn-success') %>
 <% end %>